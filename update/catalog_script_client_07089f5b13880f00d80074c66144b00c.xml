        <name>Toggle customer department label</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
   if (isLoading || newValue == '') {
      return;
   }

	// Toggle the label for customer_freeform field based on 
	// the customer type selected
	
	var customerType = newValue;
	
	switch(customerType)
	{							
		case '2': //"TriMedx International": 		
			g_form.setLabelOf('customer_freeform', 'Customer');
		break;
				
		case '3': //"Corporate Office": 
			g_form.setLabelOf("customer_freeform", "Department");			
		break;

		default:
		
		return;
	}
   
}]]></script>
